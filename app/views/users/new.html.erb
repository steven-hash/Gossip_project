<div class="container">
  <div class="row">
    <div class="col-sm-9">
    
    <% if @new_user.errors.any? %>
        <div class="alert alert-danger" role="alert">
          <p>Nous n'avons pas réussi à créer l'utilisateur pour la (ou les) raison(s) suivante(s) :</p>
          <ul>
            <% @new_user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
    
      <h1>Nouvel utilisateur!</h1>
      
      <%= form_tag url_for(action: 'create'), method: "post" do %>

      <%= label_tag 'Prénom' %>
      <%= text_field_tag 'first_name', @new_user.first_name, :class => 'form-control' %>
      <br /> 

      <%= label_tag 'Nom' %>
      <%= text_field_tag 'last_name', @new_user.last_name, :class => 'form-control' %>
      <br /> 
      
      <%= label_tag 'Description' %>
      <%= text_area_tag 'description', @new_user.description, :class => 'form-control' %>
      <br />

      <%= label_tag 'Email' %>
      <%= text_field_tag 'email', @new_user.email, :class => 'form-control' %>
      <br />
      
      <%= label_tag 'Age' %>
      <%= text_field_tag 'age', @new_user.age, :class => 'form-control' %>
      <br />
      
      <%= label_tag 'Ville' %>
      <%= text_field_tag 'city', @new_user.city, :class => 'form-control' %>
      <br />

      <%= submit_tag "Créer", :class => 'btn btn-primary' %>

      <% end %>
    
    </div>
  </div>
</div>



